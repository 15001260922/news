<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:id="@+id/rel"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relative"
        android:background="#e1dfce"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorWrite"
            android:text="欢迎"
            android:id="@+id/save_news_hoder"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/colorWrite"
            android:text="添加新闻"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <EditText
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWrite"
        android:hint="请输入新闻标题"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGreyfirst"
        android:singleLine="true"
        android:id="@+id/news_title"
        android:layout_below="@+id/relative"
        android:layout_alignLeft="@+id/news_content"
        />
    <EditText
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWrite"
        android:hint="请输入新闻摘要"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGreyfirst"
        android:singleLine="true"
        android:id="@+id/news_abstract"
        android:layout_below="@+id/news_title"
        android:layout_alignLeft="@+id/news_content"
        />

    <EditText
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:paddingLeft="10dp"
        android:id="@+id/news_content"
        android:background="@color/colorWrite"
        android:hint="请输入您要发布的内容"
        android:textColorHint="@color/colorGreyfirst"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/news_abstract"
        android:layout_centerInParent="true"
        android:gravity="left"
        android:textSize="18sp"
        android:onClick="onClick"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您可以长按屏幕任何位置登录或注册"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="36dp"
        android:layout_below="@+id/news_content"
        android:textColor="@color/colorBlackBEBEBE"
        />
</RelativeLayout>